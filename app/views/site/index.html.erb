
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "newyork_background.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-2">VAGABOND</h1>
        <h4><%= link_to "Where do you want to travel?", cities_path %></h4>
      </div>
    </div>
    <!-- These carousel items should NOT be hardcoded -->
    <!-- In your site_controller.rb's index method, add a @cities = City.all and iterate through those @cities in this template -->
    <div class="carousel-item">
      <%= image_tag "sanfrancisco_city.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-3">San Francisco</h1>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "chicago_city.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-3">Chicago</h1>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "newyork_city.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-3">New York</h1>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "losangeles_city.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-3">Los Angeles</h1>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag "miami_city.jpg", class: "d-block w-100" %>
      <div class="carousel-caption d-none d-md-block">
        <h1 class="display-3">Miami</h1>
      </div>
    </div>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
